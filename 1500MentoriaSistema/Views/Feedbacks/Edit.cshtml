@model _1500MentoriaSistema.Models.Feedback

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-info">
    <div class="card-body">
        <h5><a asp-action="Index">Voltar a Lista</a> / Feedbacks / Novo</h5>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" type="date" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="CircleId" class="control-label"></label>
                    <select asp-for="CircleId" class="form-control" asp-items="ViewBag.CircleId">
                        <option>Selecione uma opção</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="ThemeId" class="control-label"></label>
                    <select asp-for="ThemeId" class="form-control" asp-items="ViewBag.ThemeId">
                        <option>Selecione uma opção</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="StudentPersonId" class="control-label"></label>
                    <select asp-for="StudentPersonId" class="form-control" asp-items="ViewBag.StudentId">
                        <option>Selecione uma opção</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="TeacherPersonId" class="control-label"></label>
                    <select asp-for="TeacherPersonId" class="form-control" asp-items="ViewBag.TeacherId">
                        <option>Selecione uma opção</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="OportunityLearning" class="control-label"></label>
                    <input asp-for="OportunityLearning" class="form-control" />
                    <span asp-validation-for="OportunityLearning" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Note" class="control-label"></label>
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Comment" class="control-label"></label>
                    <input asp-for="Comment" class="form-control" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="row">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
