@model _1500MentoriaSistema.Models.Learning

@{
    ViewData["Title"] = "Create";
}

<div class="card card-info">
    <div class="card-body">
        <h5><a asp-action="Index">Voltar a Lista</a> / Aprendizados / Novo</h5>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="CircleId" class="control-label"></label>
                    <select asp-for="CircleId" class="form-control" asp-items="ViewBag.CircleId">
                        <option>Selecione uma opção</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="ThemeId" class="control-label"></label>
                    <select asp-for="ThemeId" class="form-control" asp-items="ViewBag.ThemeId">
                        <option>Selecione uma opção</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="StudentPersonId" class="control-label"></label>
                    <select asp-for="StudentPersonId" class="form-control" asp-items="ViewBag.StudentId">
                        <option>Selecione uma opção</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="TeacherPersonId" class="control-label"></label>
                    <select asp-for="TeacherPersonId" class="form-control" asp-items="ViewBag.TeacherId">
                        <option>Selecione uma opção</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="OportunityLearning" class="control-label"></label>
                    <input asp-for="OportunityLearning" class="form-control" />
                    <span asp-validation-for="OportunityLearning" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="LearningAction" class="control-label"></label>
                    <input asp-for="LearningAction" class="form-control" />
                    <span asp-validation-for="LearningAction" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="MeasurementDate" class="control-label"></label>
                    <input asp-for="MeasurementDate" class="form-control" type="date" />
                    <span asp-validation-for="MeasurementDate" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="MeasurementForm" class="control-label"></label>
                    <input asp-for="MeasurementForm" class="form-control" />
                    <span asp-validation-for="MeasurementForm" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label asp-for="Result" class="control-label"></label>
                    <input asp-for="Result" class="form-control" />
                    <span asp-validation-for="Result" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Comment" class="control-label"></label>
                    <input asp-for="Comment" class="form-control" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" class="form-control">
                        <option>Selecione uma opção</option>
                        <option value="0">Em branco</option>
                        <option value="1">Completo</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
            <hr/>
            <div class="row">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
