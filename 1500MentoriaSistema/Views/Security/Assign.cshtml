@model AssignRoleViewModel

@{
    ViewData["Title"] = "Atibuição";
}

<div class="card card-info">
    <div class="card-body">
        <h5><a asp-controller="Home" asp-action="Index">Voltar ao início </a> / Cargos / Atribuir</h5>
        <hr />
        <form asp-action="Assign">
            <div class="row">
                <div class="col-6">
                    <label for="userId">Usuário:</label>
                    <select id="userId" name="userId" class="form-control">
                        @foreach (var user in Model.Users)
                        {
                            <option value="@user.Id">@user.UserName</option>
                        }
                    </select>
                </div>

                <div class="col-6">
                    <label for="roleName">Cargo:</label>
                    <select id="roleName" name="roleName" class="form-control">
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.Name">@role.Name</option>
                        }
                    </select>
                </div>
            </div>
            

            <div class="form-group">
                <label>Permissões:</label><br />
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="createClaim" name="claims" value="Create">
                    <label class="form-check-label" for="createClaim">Criar</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="editClaim" name="claims" value="Edit">
                    <label class="form-check-label" for="editClaim">Editar</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="deleteClaim" name="claims" value="Delete">
                    <label class="form-check-label" for="deleteClaim">Deletar</label>
                </div>
            </div>

            <hr/>

            <div class="row">
                <button type="submit" class="row btn btn-primary">Atribuir Cargo</button>
            </div>
        </form>
    </div>
</div>